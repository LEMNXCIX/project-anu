{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-write-file",
    "fs:allow-create",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$DOCUMENTS/**"
        },
        {
          "path": "$DOWNLOADS/**"
        }
      ]
    },
    "log:default",
    "dialog:default",
    "dialog:allow-ask",
    "dialog:allow-message",
    "dialog:allow-open",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download-and-install"
  ]
}